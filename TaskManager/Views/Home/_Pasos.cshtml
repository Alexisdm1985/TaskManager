<label><i class="bi bi-check-square"></i>Pasos de la tarea</label>
<button class="btn btn-secondary btn-sm" onclick="manejarClickAgregarPaso()">
    <i class="bi bi-plus"></i>
</button>

<div data-bind="foreach: pasos">
    <div class="mt-2">
        <div class="row">
            <div class="col-1">
                <input type="checkbox"
                       class="form-check-input"
                       name="chbPaso"
                       data-bind="{checked: realizado, click: manejarClickCheckBoxPaso}" />
            </div>
            <div class="col-11">
                <span data-bind="text: descripcion,
                                hidden:modoEdicion,
                                css: {'text-decoration-line-through': realizado},
                                click: manejarClickDescripcionPaso"
                      style="cursor: pointer"></span>

                <textarea name="txtPasoDescripcion"
                          class="form-control"
                          placeholder="Agregue una descripcion"
                          data-bind="{value: descripcion, visible: modoEdicion}">
                </textarea>

                <div class="mt-2" data-bind="{visible: modoEdicion}">
                    <button class="btn btn-primary" data-bind="{click: manejarGuardarPaso}">Crear Paso</button>
                    <button class="btn btn-secondary" data-bind="{click: manejarCancelarPaso}">Cancelar</button>
                    <button class="btn btn-danger" data-bind="{click: manejarEliminarPaso, hidden: esNuevoPaso}">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>